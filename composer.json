{
    "name": "8xprovn/Widgets",
    "description": "A powerful alternative to view composers. Asynchronous widgets, reloadable widgets, console generator, caching - everything you can think of.",
    "license": "MIT",
    "keywords": ["laravel", "widgets", "ajax"],
    "authors": [
        {
            "name": "Nekrasov Ilya",
            "email": "nekrasov.ilya90@gmail.com"
        }
    ],
    "homepage": "https://github.com/8xprovn/laravel-widgets",
    "require": {
        "php": ">=7.0",
        "illuminate/support": ">=5.5",
        "illuminate/contracts": ">=5.5",
        "illuminate/view": ">=5.5",
        "illuminate/container": ">=5.5",
        "illuminate/console": ">=5.5",
        "illuminate/cache": ">=5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "Widgets\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arrilot\\Widgets\\Test\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Widgets\\ServiceProvider"
            ],
            "aliases": {
                "Widget": "Widgets\\Facade",
                "AsyncWidget": "Widgets\\AsyncFacade"
            }
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
